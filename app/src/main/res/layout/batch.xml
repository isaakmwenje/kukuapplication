<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_alignParentStart="true"
            android:id="@+id/batchNumber" android:hint="enter batch number"
            android:layout_alignParentTop="true" android:layout_marginTop="57dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="306dp"
            android:layout_height="40dp" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:id="@+id/textView6" tools:text="Batch Details"
            android:visibility="visible" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="112dp"
            android:id="@+id/batchDate" android:hint="enter date of   submission"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true" android:layout_marginTop="171dp"
            android:id="@+id/batchTotal" android:hint="enter total batch "/>
    <EditText
            android:layout_width="118dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_below="@+id/batchTotal" android:id="@+id/batchMale"
            android:hint="enter male"/>
    <EditText
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:layout_alignParentEnd="true" android:layout_marginEnd="98dp"
            android:id="@+id/batchFemale" android:layout_below="@+id/batchTotal" android:hint="enter female"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
            android:layout_marginBottom="193dp" android:id="@+id/batchWeight" android:hint="enter  average weight"/>

    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_marginBottom="56dp" android:id="@+id/buttonReset"/>
    <Button
            android:text="View Batch"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonView"
            android:layout_alignParentBottom="true" android:layout_alignParentStart="true"
            android:layout_marginStart="135dp"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" android:id="@+id/buttonDelete"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/buttonReset" android:id="@+id/buttonUpdatee" android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="136dp" android:layout_alignTop="@+id/buttonReset" android:id="@+id/buttonAdd"/>
    <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/buttonUpdatee" android:id="@+id/filter"/>
</RelativeLayout>